#/bin/bash

PARALLEL=""
NUMA=""
for i in 64 256 1024 4096 16384 65536 262144 1048576
do
    for j in "parallel"
    do
        cd ../benchmark
        if [ $j == "parallel" ]
        then
            PARALLEL="PARALLEL=1"
            NUMA=""
        else
            PARALLEL=""
            NUMA="NONUMA=1"
        fi
        make -B $PARALLEL COUNT=$i
        cd ../quadtree
        for k in 0 3
        do
            if [ $j == "parallel" ] && [ $k -eq 3 ]
            then
                continue
            fi
            make -B benchmark-$j-O$k $PARALLEL $NUMA TRIALS=1
        done
    done
done
